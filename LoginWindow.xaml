<Window x:Class="NotationTB.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotationTB"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="300">
    <Grid Margin="0,0,0,0">
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"  FontSize="24"/>
        <Label Content="Пароль" HorizontalAlignment="Center" VerticalAlignment="Top"  FontSize="24" Margin="0,106,0,0"/>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Center" Margin="0,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240" FontSize="24"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" Width="240" FontSize="24"/>
        <Button x:Name="LoginButton" Content="Войти" HorizontalAlignment="Center" Margin="0,203,0,0" VerticalAlignment="Top" Width="240" FontSize="24" Click="LoginButton_Click"/>

    </Grid>
</Window>
