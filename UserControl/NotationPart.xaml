<UserControl x:Class="NotationTB.UserControl.NotationPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotationTB.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="27" d:DesignWidth="800">
    <Grid x:Name="DetailGrid" Margin="0,0,0,0" VerticalAlignment="Top" Height="27">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <ComboBox x:Name="NameComboBox" Grid.Column="0" IsEditable="True"  />
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" IsEnabled="False"/>
        <ComboBox x:Name="PlanNameComboBox" Grid.Column="2" IsEditable="True"  />
        <GridSplitter Grid.Column="3" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" IsEnabled="False"/>
        <ComboBox x:Name="MaterialStampComboBox" Grid.Column="4" IsEditable="True" />
        <GridSplitter Grid.Column="5" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" IsEnabled="False"/>
        <ComboBox x:Name="MaterialStandartComboBox" Grid.Column="6" IsEditable="True" />
        <GridSplitter Grid.Column="7" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" IsEnabled="False"/>
        <ComboBox x:Name="ProductStandartComboBox" Grid.Column="8" IsEditable="True" />
        <GridSplitter Grid.Column="9" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" IsEnabled="False"/>
        <Grid x:Name="OtherRuleGrid" Grid.Column="10" Background="White" >
            <Menu VerticalAlignment="Center">
                <MenuItem x:Name="test" Header="Выбрано: " Margin="0,0,2,0">
                </MenuItem>

            </Menu>
        </Grid>
    </Grid>
</UserControl>
