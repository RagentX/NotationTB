<UserControl x:Class="NotationTB.UserControl.ProductsStandardsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotationTB.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="AddStandardButton" Content="Добавить стандарт продукта" HorizontalAlignment="Left" Margin="18,33,0,0" VerticalAlignment="Top" Click="AddStandardButton_Click"/>
        <TabControl x:Name="StandardTabControl" Margin="0,62,0,0">
        </TabControl>
        <Label Content="Стандарт материала:" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="MaterialStandardComboBox" HorizontalAlignment="Left" Margin="139,9,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="MaterialStandardComboBox_SelectionChanged"/>
        <Label Content="Тип продукта" HorizontalAlignment="Left" Margin="264,7,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ProductTypeComboBox" HorizontalAlignment="Left" Margin="353,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ProductTypeComboBox_SelectionChanged"/>

    </Grid>
</UserControl>
